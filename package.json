{
  "name": "@creadigme/aurelia-docgen",
  "version": "999.0.0",
  "description": "Aurelia + Storybook (can be) â¤. Aurelia documentation generator.",
  "author": "CREADIGME",
  "license": "AGPL-3.0-or-later",
  "main": "dist/aurelia-docgen.bundle",
  "bin": {
    "aurelia-docgen": "dist/aurelia-docgen-cli.bundle.js"
  },
  "typings": "dist/bundle.d.ts",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "repository": "https://github.com/creadigme/aurelia-docgen",
  "pre-commit": [
    "lint",
    "test"
  ],
  "publishConfig": {
    "@creadigme:registry": "https://npm.pkg.github.com"
  },
  "keywords": [
    "aurelia",
    "au2",
    "documentation",
    "docgen",
    "storybook"
  ],
  "devDependencies": {
    "@fastify/pre-commit": "^2.0.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "bundle-declarations-webpack-plugin": "^4.0.1",
    "copy-webpack-plugin": "^11.0.0",
    "dotenv-webpack": "^8.0.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-prettier": "^5.0.0",
    "json": "^11.0.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "ts-loader": "^9.3.1",
    "ts-mocha": "^10.0.0",
    "typescript": "^5",
    "webpack": "^5.88.2",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "ansi-colors": "^4.1.3",
    "chokidar": "^3.5.3",
    "command-line-args": "^5.2.1",
    "eta": "^3.1.0",
    "js-yaml": "^4.1.0",
    "typedoc": "0.24.8"
  },
  "scripts": {
    "clean": "rimraf ./dist ./coverage ./.nyc_output ./node_modules",
    "lint": "eslint ./src/**/*.{js,ts,tsx}",
    "lint:fix": "eslint ./src/**/*.{js,ts,tsx} --fix",
    "test": "ts-mocha --timeout 15000 './src/**/*.spec.ts'",
    "test:coverage": "nyc --reporter=html --reporter=text --reporter=json --reporter=text-summary npm test",
    "analyze": "rimraf dist && webpack --env production --analyze",
    "build": "rimraf dist && webpack --mode=production"
  }
}
