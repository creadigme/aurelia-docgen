    "eta": "^2.0.1",
    "js-yaml": "^4.1.0",
    "typedoc": "0.24.1"
  },
  "scripts": {
    "clean": "node ./node_modules/rimraf ./dist && node ./node_modules/rimraf ./coverage && node ./node_modules/rimraf ./.nyc_output && node ./node_modules/rimraf ./node_modules",
    "lint": "node ./node_modules/eslint/bin/eslint ./src/**/*.{js,ts,tsx}",
    "lint:fix": "node ./node_modules/eslint/bin/eslint ./src/**/*.{js,ts,tsx} --fix",
    "test": "node ./node_modules/ts-mocha/bin/ts-mocha --timeout 15000 ./src/**/*.spec.ts",
    "test:coverage": "nyc --reporter=html --reporter=text --reporter=json --reporter=text-summary npm test",
    "analyze": "node  ./node_modules/rimraf dist && node ./node_modules/webpack/bin/webpack --env production --analyze",
    "build": "node ./node_modules/rimraf dist && node ./node_modules/webpack/bin/webpack --mode=production",
    "codecov": "./node_modules/.bin/codecov"
  }
